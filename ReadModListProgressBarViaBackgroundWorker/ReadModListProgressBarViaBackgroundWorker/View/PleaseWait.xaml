<Window x:Class="ReadModListProgressBarViaBackgroundWorker.View.PleaseWait"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please Wait . . ." Height="200" Width="350">
    <Grid>
        <TextBlock Height="25" Width="2500" HorizontalAlignment="Left" Margin="30,10,0,0" Name="TextBlockPleaseWait" Text="This process takes a while. Do you want to continue?" VerticalAlignment="Top" />
        <WrapPanel HorizontalAlignment="Left" DockPanel.Dock="Top" Margin="30,40,0,10">
            <Button Name="ButtonContinue" Click="ButtonContinue_Clicked">Continue</Button>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Left" DockPanel.Dock="Top" Margin="30,80,0,10">
            <ProgressBar Name="PleaseWaitProgressBar" Height="18" Width="250" IsIndeterminate="True"></ProgressBar>
        </WrapPanel>
    </Grid>
</Window>
